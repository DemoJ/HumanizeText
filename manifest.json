{
  "manifest_version": 3,
  "name": "人话翻译器",
  "version": "1.2.2",
  "description": "将专业术语翻译成通俗易懂的人话",
  "permissions": [
    "contextMenus",
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "48": "assets/icon.png"
    }
  },
  "icons": {
    "48": "assets/icon.png"
  },
  "options_page": "options/options.html",
  "web_accessible_resources": [{
    "resources": ["content/content.js"],
    "matches": ["<all_urls>"]
  }]
} 